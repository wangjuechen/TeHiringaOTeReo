<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />

            <gradient
                android:angle="90"
                android:endColor="#529e82"
                android:startColor="#529e82" />
        </shape>
    </item>
    <item>
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="5dp" />

                <gradient
                    android:angle="90"
                    android:endColor="@color/main_background_color"
                    android:startColor="@color/main_background_color" />
            </shape>
        </clip>
    </item>

</layer-list>