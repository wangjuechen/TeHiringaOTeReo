<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_ask"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:background="@color/main_background_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">


        <ImageView
            android:id="@+id/iv_prawn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/playgamepage_answerarea_prawn_pic"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:id="@+id/tv_questionContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/playgamepage_block"
            android:gravity="center"
            tools:text="Hello mana"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@+id/iv_prawn"
            app:layout_constraintLeft_toRightOf="@+id/iv_prawn"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="12dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"/>

        <TextView
            android:id="@+id/iv_answerContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/playgamepage_answerarea_pic"
            android:paddingLeft="26dp"
            android:paddingRight="10dp"
            android:paddingTop="23dp"
            android:text="@string/AnswerContainerTip"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_questionContent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/playgamePage_title"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_questionNumberWidgets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="6dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/tv_questionTotalNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="12"
            android:textSize="8sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_questionSLash"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/tv_questionSLash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="/"
            android:textSize="22sp"
            app:layout_constraintRight_toLeftOf="@+id/tv_questionTotalNumber"
            app:layout_constraintEnd_toStartOf="@+id/tv_questionTotalNumber"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_questionCurrentNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="1"
            android:textSize="10sp"
            app:layout_constraintRight_toLeftOf="@+id/tv_questionSLash"
            app:layout_constraintEnd_toStartOf="@+id/tv_questionSLash"
            app:layout_constraintTop_toTopOf="@+id/tv_questionSLash"
            android:layout_marginTop="3dp"/>

        </android.support.constraint.ConstraintLayout>

        <ImageView
            android:id="@+id/iv_fishHookLeftBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/playgamepage_answerarea_fishhook3_pic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="0dp"/>

        <ImageView
            android:id="@+id/iv_fishHookRightTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/playgamepage_answerarea_fishhook2_pic"
            app:layout_constraintTop_toTopOf="@id/iv_prawn"
            app:layout_constraintBottom_toBottomOf="@+id/iv_prawn"
            app:layout_constraintRight_toRightOf="@+id/layout_questionNumberWidgets"/>

        <ImageView
            android:id="@+id/iv_fishHookRighgtBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/playgamepage_answerarea_fishhook1_pic"
            app:layout_constraintBottom_toBottomOf="@+id/iv_fishHookLeftBottom"
            app:layout_constraintTop_toTopOf="@+id/iv_fishHookLeftBottom"
            app:layout_constraintRight_toRightOf="@id/iv_fishHookRightTop"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline6"
            app:layout_constraintGuide_begin="72dp"
            android:orientation="horizontal" />


    </android.support.constraint.ConstraintLayout>

    <GridView
        android:id="@+id/layout_answer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/border_answerblock_box"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_ask"
        android:numColumns="2"
        android:columnWidth="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="16dp">

    </GridView>

</android.support.constraint.ConstraintLayout>